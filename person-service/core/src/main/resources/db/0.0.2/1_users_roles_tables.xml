<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="2" author="pshenichnikov">
        <comment>Создание начальной структуры таблиц для пользователей и ролей</comment>

        <createTable tableName="users">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="login" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="roles">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="role" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="users_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false" references="users(id)"
                             foreignKeyName="fk_usersroles_users"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false" references="roles(id)"
                             foreignKeyName="fk_usersroles_roles"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>